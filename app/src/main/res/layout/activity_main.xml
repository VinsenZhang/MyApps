<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="@bool/is_fitwindows"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_tabs_container" />


    <View
        android:layout_above="@+id/main_tabs_container"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <LinearLayout
        android:paddingTop="5sp"
        android:paddingBottom="5dp"
        android:id="@+id/main_tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/tab_home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_home_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp" />


            <TextView
                android:textSize="11sp"
                android:id="@+id/tab_home_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/main_tab_home"
                android:textColor="@color/home_tab_unselected" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_video_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_video_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp" />


            <TextView
                android:textSize="11sp"
                android:id="@+id/tab_video_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/main_tab_video"
                android:textColor="@color/home_tab_unselected" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_task_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/tab_task_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp" />


            <TextView
                android:textSize="11sp"
                android:id="@+id/tab_task_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/main_tab_task"
                android:textColor="@color/home_tab_unselected" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/tab_mine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/tab_mine_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp" />


            <TextView
                android:textSize="11sp"
                android:id="@+id/tab_mine_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/main_tab_mine"
                android:textColor="@color/home_tab_unselected" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>